<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rebeckareitmaier.faceless.ProfileActivity"
    android:id="@+id/oo">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButtonProfile"
        android:src="@drawable/ic_person_white_48dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="this is text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignEnd="@+id/editText3"
        android:layout_above="@+id/editText3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:maxLength="50"
            android:paddingLeft="20dp"
            android:background="@drawable/myninepatch"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:layout_gravity="center_horizontal|top" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/myninepatch"
            android:maxLength="20"
            android:maxLines="1"
            />
    </FrameLayout>

    <EditText
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_above="@+id/imageButtonProfile"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="1"
        android:background="@drawable/myninepatch"
        />

    <!--android:drawable="@drawable/ic_person_white_48dp"-->
</RelativeLayout>

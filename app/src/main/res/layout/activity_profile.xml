<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rebeckareitmaier.faceless.ProfileActivity"
    android:id="@+id/oo">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Here you can write something about yourself!"
            android:id="@+id/textView1"
            android:layout_gravity="left|top" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:paddingLeft="20dp"
            android:background="@drawable/myninepatch"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:layout_gravity="center_horizontal|top"
            android:maxLength="70"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Any hashtags?"
            android:id="@+id/textView2"
            android:layout_gravity="left|center"
            android:layout_above="@+id/frameLayout"
            />

        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/myninepatch"
            android:maxLength="20"
            android:maxLines="1" />

        <TextView
            android:layout_marginBottom="185dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your name?"
            android:id="@+id/textView2"
            android:layout_gravity="left|bottom"
            android:layout_above="@+id/frameLayout"
            />

        <EditText
            android:layout_marginBottom="185dp"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_above="@+id/textView3"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLength="20"
            android:maxLines="1"
            android:background="@drawable/myninepatch"
            android:layout_gravity="right|bottom" />

        <TextView
            android:layout_marginBottom="135dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your interests?"
            android:id="@+id/textView3"
            android:layout_gravity="left|bottom"
            android:layout_above="@+id/frameLayout"
            />

        <Spinner
            android:layout_marginBottom="135dp"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_gravity="right|bottom" />

        <Button
            android:layout_marginBottom="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button"
            android:layout_gravity="right|bottom"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimaryDark"/>

    </FrameLayout>

    <!--android:drawable="@drawable/ic_person_white_48dp"-->
</RelativeLayout>
